<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>
    <%= @destination.name %>
  </h3>

  <p>
    <strong>Zip:</strong>
    <%= @destination.zip %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @destination.description %>
  </p>

  <%= image_tag(@destination.image_url) %>

  <div class="row" id="forecast-<%= @destination.name %>">
    <h4>Forecast for <%= @destination.name %>:</h4>
    <h5>Date: <%= @destination_weather.date %></h5>
    <ul>
      <li>Current: <%= @destination_weather.current_temp %> Degrees </li>
      <li>High: <%= @destination_weather.max_temp %> Degrees </li>
      <li>Low: <%= @destination_weather.min_temp %> Degrees </li>
      <li>Summary: <%= @destination_weather.summary %> </li>
    </ul>
  </div>

  <div class="row">
    <%= link_to 'Edit', edit_destination_path(@destination) %> |
    <%= link_to 'Back', destinations_path %>
  </div>
</div>
